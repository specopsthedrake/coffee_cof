<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/fontmain"
    tools:context="com.example.djohnson7823.coffee_cof.Coffee_Activity">

    <TextView
        android:textSize="20sp"
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="welcome to drake's coffee"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/minus_coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/add_coffee"
        android:onClick="minus"
        android:text="-" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chocolate"
        android:textColor="#2d1606"
        android:text="add chocolate"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"

        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carmel"
        android:text="add carmel"
        android:textColor="#a76b29"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
    <CheckBox

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chocolate"
        android:id="@+id/choco_CheckBox"
        android:layout_below="@+id/chocolate"
        android:layout_alignParentLeft="true"

        android:checked="false"
        android:layout_toLeftOf="@+id/number_coffee"
        android:layout_toStartOf="@+id/number_coffee" />
    <CheckBox

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carmel"
        android:id="@+id/carmel_CheckBox"
        android:layout_below="@+id/carmel"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/choco_CheckBox" />

    <TextView

        android:id="@+id/final_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/continu"
        android:paddingBottom="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="continu"
        android:id="@+id/continu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="is this correct?"

        />

    <TextView

        android:id="@+id/number_coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number of coffee
                1"
        android:layout_below="@+id/add_coffee"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t"
        android:textOff="enLarge Text"
        android:textOn="Minimize Text"
        android:paddingBottom="20dp"
        android:onClick="toggleClicked"
        android:layout_below="@+id/add_coffee"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/add_coffee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="plus"
        android:text="+"
        android:layout_below="@+id/welcome"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
